<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Conex1.FramePage">
    <ContentPage.Content>
        <Frame BorderColor="Orange"
               CornerRadius="10"
               Padding="8">
            <StackLayout>
                
                <Label Text="INSTRUCTIONS"
                 FontSize="Large"
                       FontAttributes="Bold" />
                <BoxView Color="Gray"
                         HeightRequest="2"
                         HorizontalOptions="Fill" />
                <Label Text="1. Connect the dots in the game as fast as you can" />
                <Label Text="2. If you stop drawing, you can only resume where you left off" />
                <Label Text="3. You cannot start on 1" />
                <Label Text="4. Play with friends" />
                <Label Text="5. Have Fun!" />
                <Button Text="Game Page" BackgroundColor="Blue" Clicked="NavigateButton_OnClicked" />

                <Button x:Name="ThemeButton" Text="Check Theme" Clicked="ThemeButton_Clicked" Margin="5, 5, 5, 5" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />

            </StackLayout>
            
        </Frame>
    </ContentPage.Content>
</ContentPage>